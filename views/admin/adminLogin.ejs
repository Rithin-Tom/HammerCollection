<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Hammer Collection - Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.22.0/dist/sweetalert2.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      background-color: #f5f5f5;
      font-family: 'Georgia', serif;
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .login-box {
      width: 100%;
      max-width: 400px;
      background-color: #2b5885;
      color: white;
      padding: 40px;
      border-radius: 25px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .login-box h3,
    .login-box h4 {
      text-align: center;
      font-weight: bold;
    }

    .form-control {
      background: transparent;
      border: none;
      border-bottom: 1px solid white;
      border-radius: 0;
      color: white;
    }

    .form-control:focus {
      box-shadow: none;
      border-bottom: 2px solid #fff;
    }

    .continue-btn {
      background-color: #708AA4;
      border: none;
      width: 100%;
      padding: 10px;
      border-radius: 10px;
      color: white;
      font-weight: bold;
      margin-top: 15px;
    }

    .logo {
      width: 40px;
      height: 40px;
      background-color: white;
      border-radius: 50%;
      display: inline-block;
      text-align: center;
      line-height: 40px;
      font-size: 20px;
      margin-right: 8px;
    }

    .forgot-password {
      text-align: right;
      font-size: 13px;
      margin-top: -10px;
    }

    .forgot-password a {
      color: #fff;
      text-decoration: none;
    }

    .error-message {
      color: #90ff8c;
      font-size: 0.75rem;
      margin-top: 5px;
      display: none;
    }
  </style>
</head>
<body>

  <div class="login-box text-white text-center">
    <div class="d-flex justify-content-center align-items-center mb-3">
      <div class="logo">ðŸ”¨</div>
      <h4>Hammer Collection</h4>
    </div>
    <h3>LOG IN</h3>
    <form class="mt-4" onsubmit="return login(event)">
      <div class="mb-3 text-start">
        <label>Email:</label>
        <input type="text" name="email" class="form-control" id="loginEmail" >
        <div id="loginError1" class="error-message"></div>
      </div>
      <div class="mb-2 text-start">
        <label>Password:</label>
        <input type="password" name="password" class="form-control" id="loginPassword" >
        <div id="loginError2" class="error-message"></div>
      </div>
      <div class="forgot-password">
        <a href="#">Forgot password?</a>
      </div>
      <button type="submit" class="continue-btn">CONTINUE</button>
    </form>
  </div>

</body>
</html>

<script>
  function login(event) {
    event.preventDefault();

    const email = document.getElementById("loginEmail").value.trim();
    const password = document.getElementById("loginPassword").value.trim();
    const error1 = document.getElementById("loginError1");
    const error2 = document.getElementById("loginError2");

    let isValid = true;

    // Email validation
    const emailPattern = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/i;
    if (!emailPattern.test(email)) {
      error1.style.display = "block";
      error1.innerHTML = "Please enter a valid email";
      isValid = false;
    } else {
      error1.style.display = "none";
    }

    // Password validation
    if (password === "") {
      error2.style.display = "block";
      error2.innerHTML = "Password cannot be empty";
      isValid = false;
    } else {
      error2.style.display = "none";
    }

    if (!isValid) return false;

    // Submit via AJAX
    $.ajax({
      type: "POST",
      url: "/admin/login",
      data: { email, password },
      success: function (response) {
        if (response.success) {
          Swal.fire({
            icon: "success",
            title: "Login Successful",
            showConfirmButton: false,
            timer: 1200
          }).then(() => {
            window.location.href = response.redirectUrl || "/";
          });
        } else {
          Swal.fire({
            icon: "error",
            title: "Login Failed",
            text: response.message || "Invalid credentials"
          });
        }
      },
      error: function (xhr) {
        const res = xhr.responseJSON || {};
        Swal.fire({
          icon: "error",
          title: "Error",
          text: res.message || "Something went wrong"
        });
      }
    });

    return false;
  }
</script>
