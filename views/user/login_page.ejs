    }

    .forgot-password {
      text-align: right;
      font-size: 13px;
      margin-top: -10px;
    }

    .forgot-password a {
      color: #fff;
      text-decoration: none;
    }

    .google-btn {
      background-color: #708AA4;
      color: #ffffff;
      border: none;
      padding: 10px;
      border-radius: 10px;
      font-weight: bold;
      width: 100%;
      margin-top: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
    }

    .google-btn img {
      width: 20px;
      height: 20px;
      border-radius: 10px;
    }

    .separator {
      text-align: center;
      margin: 10px 0;
      color: #ffffff;
    }
  </style>
</head>
<body>

  <div class="login-box text-white text-center">
    <div class="d-flex justify-content-center align-items-center mb-3">
      <div class="logo">ðŸ”¨</div>
      <h4>Hammer Collection</h4>
    </div>
    <h3>LOG IN</h3>
    <form class="mt-4" onsubmit="return login()">
      <div class="mb-3 text-start">
        <label>Email:</label>
        <input type="email" name="email" class="form-control" required>
      </div>
      <div class="mb-2 text-start">
        <label>Password:</label>
        <input type="password" name="password" class="form-control" autocomplete="off" required>
      </div>
      <div class="forgot-password">
        <a href="/find-accountPage">Forgot password?</a>
      </div>
      <button type="submit" class="continue-btn">CONTINUE</button>
      <div class="separator">or</div>
      <a href="/auth/google" style="text-decoration: none;">
  <button type="button" class="google-btn">
    <img src="https://i.pinimg.com/736x/60/41/99/604199df880fb029291ddd7c382e828b.jpg" alt="Google Logo">
    Continue with Google
  </button>
</a>

    </form>

      <div class="bottom-text">
      Donâ€™t have an account yet?? <a href="/signup"  style="color:yellow; ">
        <br>Create One now...!</a>
    </div>
  </div>

</body>
</html>

<script>

  function login() {
    const email = document.querySelector('input[name="email"]').value;
    const password = document.querySelector('input[name="password"]').value;
  
  $.ajax({
  type: "POST",
  url: "/login",
  data: { email, password },
  success: function (response) {
 

  
    
    if (response.success) {
      Swal.fire({
        icon: "success",
        title: "Login",
        showConfirmButton: false,
        timer: 1000
      }).then(() => {
        window.location.href = response.redirectUrl || "/";
      });
    } else {
      // This part won't be reached unless backend responds with 200 and success: false
      Swal.fire({
        icon: "error",
        title: "Login Failed",
        text: response.message || "Login Error"
      });
    }
  },
 error: function (xhr) {
 
  try {
    const res = JSON.parse(xhr.responseText);
    if (xhr.status === 400 || xhr.status === 403) {
      Swal.fire({
        icon: "error",
        title: "Login Error",
        text: res.message || "Login failed"
      });
    } else {
      Swal.fire({
        icon: "error",
        title: "Server Error",
        text: "Please try again later"
      });
    }
  } catch (err) {
    console.error("JSON parse error:", err);
    Swal.fire({
      icon: "error",
      title: "Unexpected Error",
      text: "Something went wrong. Please try again."
    });
  }
}
});

    return false; 
  }
</script>