<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Hammer Collection - Reset Password</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.22.0/dist/sweetalert2.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    body {
      background-color: #f5f5f5;
      font-family: 'Georgia', serif;
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .login-box {
      width: 100%;
      max-width: 400px;
      background-color: #2b5885;
      color: white;
      padding: 40px;
      border-radius: 25px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    .login-box h3,
    .login-box h4 {
      text-align: center;
      font-weight: bold;
    }

    .form-control {
      background: transparent;
      border: none;
      border-bottom: 1px solid white;
      border-radius: 0;
      color: white;
    }

    .form-control:focus {
      box-shadow: none;
      border-bottom: 2px solid #fff;
    }

    .continue-btn {
      background-color: #708AA4;
      border: none;
      width: 100%;
      padding: 10px;
      border-radius: 10px;
      color: white;
      font-weight: bold;
      margin-top: 20px;
    }
    .error-message{
      color: rgb(241, 15, 15);
      font-size: 0.75rem;
      display: none;

    }

    .logo {
      width: 40px;
      height: 40px;
      background-color: white;
      border-radius: 50%;
      display: inline-block;
      text-align: center;
      line-height: 40px;
      font-size: 20px;
      margin-right: 8px;
    }
  </style>
</head>
<body>

  <div class="login-box text-white text-center">
    <div class="d-flex justify-content-center align-items-center mb-3">
      <div class="logo">ðŸ”¨</div>
      <h4>Hammer Collection</h4>
    </div>
    <h3>Reset Password</h3>
    <form id="resetPasswordForm" class="mt-4">
      <div class="mb-3 text-start">
        <label>New Password:</label>
        <input type="password" id="password" name="password" class="form-control"  />
        <div id="error1" class="error-message" ></div>
      </div>
      <div class="mb-3 text-start">
        <label>Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
      </div>
      <button type="submit" class="continue-btn">Update Password</button>
    </form>
  </div>

  <script>
    const form = document.getElementById("resetPasswordForm");
     const error1 = document.getElementById("error1");

    form.addEventListener("submit", async function (e) {
      e.preventDefault();

     const password = document.getElementById('password').value;
const confirmPassword = document.getElementById('confirmPassword').value;

       const passPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$%^&+=!]).{8,}$/;
      if(!passPattern.test(password)){
        error1.style.display = "block";
      error1.innerHTML = "Password must be 8+ chars, with uppercase, lowercase, digit, and symbol.";
      return ;
      }

      if (password !== confirmPassword) {
         error1.style.display = "block";
      error1.innerHTML = "Passwords do not match";
      return;
        
      }else{
        error1.style.display = "none";
      }
     

      try {
        const res = await fetch(`/reset-password`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ password })
        });

        const data = await res.json();
        Swal.fire({
          icon: data.success ? "success" : "error",
          title: data.success ? "Password Updated" : "Error",
          text: data.message
        }).then(() => {
          if (data.success) window.location.href = "/login";
        });
      } catch (err) {
        Swal.fire("Error", "Something went wrong. Please try again.", "error");
      }
    });
  </script>

</body>
</html>
